@model CharacterBuilder.Models.Item.ItemDetail

@{
    ViewData["Title"] = $"Delete {Model.Name}?";
}

<div class="container col-8">
    <div class="alert alert-danger" role="alert">
        Are you sure you wish to delete <strong>@Model.Name</strong>?
        This cannot be undone.
    </div>
    @Html.ActionLink("Delete","Delete",new {id = Model.Id}, new {Class="btn btn-danger"})
    @Html.ActionLink("Get me out of here!", "Index", new {id = @Model.Id})
</div>